.articles
  a
    display block
    text-decoration none
    padding 32px 0
    border-top 1px solid rgba(255, 255, 255, .24)
    border-bottom 1px solid rgba(255, 255, 255, .24)
    position relative
    h3
      color #FFF
      font-size 40px
      font-weight 700
      margin 0 0 8px
    time
      font-size 16px
      font-weight 300
      color #FFF
      margin-top 8px
    .icon-arrow-right
      position absolute
      right 0
      top calc(50% - 11px)